@model PizzaApplication.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="OrderType" class="control-label"></label>
                @Html.DropDownList("Roles", Html.GetEnumSelectList(typeof(Roles)), "Select Role", new { @class = "form-control" })
                <span asp-validation-for="OrderType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverOut" class="control-label"></label>
                <input asp-for="DriverOut" class="form-control" />
                <span asp-validation-for="DriverOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DriverIn" class="control-label"></label>
                <input asp-for="DriverIn" class="form-control" />
                <span asp-validation-for="DriverIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
